<sprdSvg:DesignConfigurationRendererClass xmlns="http://www.w3.org/2000/svg" xmlns:sprdSvg="sprd.view.svg" xmlns:js="js.core">

    <js:Repeat items="{configuration.printColors}">
        <js:Template name="item">
            <mask id="{maskId}-{index}">
                <image href="{maskUrl(index)}" onload="handleLoad(index)" width="{width}" height="{height}"/>
            </mask>
        </js:Template>
    </js:Repeat>

    <js:Repeat items="{configuration.printColors}" itemKey="printColor">
        <js:Template name="item">
            <rect mask="url(#{maskId}-{index})" style="fill: {fillUrl(index)}" width="{width}" height="{height}" visible="{allLayersLoaded()}"/>
        </js:Template>
    </js:Repeat>

    <image href="{url()}" width="{width}" height="{height}" visible="{not(hasSpecialColor())}"/>

    <image href="{baseUrl('sprd/css/loading-spin-white.svg')}" width="{loaderSize()}" height="{loaderSize()}"
           x="{loaderPos().x}" y="{loaderPos().y}" class="loader-white" visible="{not(allLayersLoaded())}"/>
    <image href="{baseUrl('sprd/css/loading-spin-black.svg')}" width="{loaderSize()}" height="{loaderSize()}"
           x="{loaderPos().x}" y="{loaderPos().y}" class="loader-black" visible="{not(allLayersLoaded())}"/>
</sprdSvg:DesignConfigurationRendererClass>