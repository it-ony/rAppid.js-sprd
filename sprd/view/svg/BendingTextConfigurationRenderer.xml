<sprdSvg:BendingTextConfigurationRendererClass xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:sprdSvg="sprd.view.svg">

    <rect class="text-configuration-background" width="{width}" height="{height}"/>

    <path cid="path" class="path" id="textPath{maskId}" fill="none" _transform="translate({configuration.textPathOffsetX}, {configuration.textPathOffsetY})"
          d="{configuration.textPath}"/>
    <text cid="text" class="bending-text" font-family="{configuration.font.getUniqueFontName()}" font-size="{configuration.fontSize}" id="text" text-anchor="middle" style="{getFill()}" dy="{configuration.dy}"
    selected="{not(loading)}">
        <textPath xlink:href="#textPath{maskId}" cid="textPath" startOffset="50%" fill="{getPrintColor()}">
            {configuration.text}
        </textPath>
    </text>

    <image href="{baseUrl('sprd/css/loading-spin-white.svg')}" width="{loaderSize()}" height="{loaderSize()}"
           x="{loaderPos().x}" y="{loaderPos().y}" class="loader-white" visible="{loading}"/>
    <image href="{baseUrl('sprd/css/loading-spin-black.svg')}" width="{loaderSize()}" height="{loaderSize()}"
           x="{loaderPos().x}" y="{loaderPos().y}" class="loader-black" visible="{loading}"/>

</sprdSvg:BendingTextConfigurationRendererClass>